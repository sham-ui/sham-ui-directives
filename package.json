{
  "name": "sham-ui-directives",
  "description": "Directives for sham-ui-templates",
  "author": "Eugeny Burnashov <shamcode@gmail.com>",
  "main": "index.js",
  "version": "5.0.0-alpha.1",
  "scripts": {
    "start": "node demo-app/server.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "build:silent": "webpack --mode=production",
    "build": "yarn build:silent --progress",
    "size": "yarn build && size-limit",
    "prepublish": "yarn size && yarn build",
    "doc:generate": "documentation readme src/index.js --section=API",
    "doc:lint": "documentation lint src/**"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.4.5",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-modules-umd": "^7.0.0",
    "@babel/preset-env": "^7.6.2",
    "@babel/runtime": "^7.4.5",
    "@size-limit/preset-small-lib": "^2.1.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-macros": "^2.6.1",
    "core-js": "^3.2.1",
    "css-loader": "~2.1.1",
    "eslint": "^5.16.0",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-jest": "^22.6.4",
    "express": "^4.17.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "documentation": "^12.1.2",
    "jest": "^23.6.0",
    "jest-runner-eslint": "^0.7.4",
    "jest-runner-stylelint": "^1.0.0",
    "node-sass": "^4.13.1",
    "sass-loader": "~7.1.0",
    "sham-ui": "^5.0.0-alpha.3",
    "sham-ui-jest-preprocessor": "^5.0.0-alpha.1",
    "sham-ui-macro": "^3.0.0",
    "sham-ui-templates": "^5.0.0-alpha.1",
    "sham-ui-templates-loader": "^5.0.0-alpha.1",
    "sham-ui-test-helpers": "^5.0.0-alpha.1",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.8.0",
    "style-loader": "~0.22.1",
    "webpack": "~4.22.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-middleware": "~3.1.3",
    "webpack-hot-middleware": "^2.22.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "useBuiltIns": "usage",
          "corejs": 3,
          "shippedProposals": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose" : true
        }
      ],
      "@babel/plugin-transform-modules-umd",
      "@babel/plugin-proposal-function-bind",
      [
        "@babel/plugin-proposal-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ],
      "macros"
    ]
  },
  "babelMacros": {
    "ref": {
      "enabled": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss"
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "moduleFileExtensions": [
          "js",
          "json",
          "sfc"
        ],
        "transform": {
          "^.+\\.sht$": "sham-ui-jest-preprocessor",
          "^.+\\.sfc$": "sham-ui-jest-preprocessor",
          "^.+\\.js$": "babel-jest"
        },
        "collectCoverageFrom": [
          "src/**/*.js"
        ],
        "coveragePathIgnorePatterns": [
          "^.+\\.sht$"
        ],
        "testPathIgnorePatterns": [
          "<rootDir>/node_modules/",
          "<rootDir>/__tests__/setup-jest.js"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup-jest.js",
        "testURL": "http://sham-ui-directives.example.com"
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "eslint",
        "moduleFileExtensions": [
          "js",
          "json",
          "sfc"
        ],
        "testMatch": [
          "<rootDir>/src/**/*.*",
          "<rootDir>/__tests__/**/*.js",
          "<rootDir>/__mocks__/**/*.js",
          "<rootDir>/demo-app/**/*.js"
        ]
      },
      {
        "runner": "jest-runner-stylelint",
        "displayName": "stylelint",
        "moduleFileExtensions": [
          "scss"
        ],
        "testMatch": [
          "**/*.scss"
        ]
      }
    ]
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "1 KB"
    }
  ],
  "browserslist": [
    "> 1%",
    "not dead",
    "not ie <= 11"
  ]
}
